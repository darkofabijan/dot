# rails
alias sc="./script/console"
alias ss="./script/server"
alias sl="./script/launch"
alias resqw="QUEUES=* VERBOSE=1 rake environment resque:work"
alias resqs="QUEUES=* VERBOSE=1 rake environment resque:scheduler"
alias re="rails"
alias r="rake"
alias rs="rspec spec"
alias rr="rake routes"
alias rc="cucumber --format=pretty"
alias rcw="cucumber --profile=wip --format=pretty"
alias rdbm="rake db:migrate"
alias rdbtp="rake db:test:prepare"
alias bes="bundle exec spork"
