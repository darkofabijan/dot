# unix
alias ll="ls -lah"
alias g="git"
alias v="vim"
alias ack="ack-grep"
alias f="fg"
alias t="tmux"

# rails
alias resqw="QUEUES=* VERBOSE=1 bundle exec rake environment resque:work"
alias be="bundle exec"
alias rs="bundle exec rspec spec"
alias rr="bundle exec rake routes"
alias rc="bundle exec cucumber --format=pretty"
alias rcw="bundle exec cucumber --profile=wip --format=pretty"
alias rdbm="bundle exec rake db:migrate"
alias rdbtp="bundle exec rake db:test:prepare"
alias bes="bundle exec spork"
alias besc="bundle exec spork cucumber"
alias server="bundle exec rails server thin"
alias console="bundle exec rails console"
alias constg="bundle exec heroku console --app semaphore-stg"
alias conpro="bundle exec heroku console --app semaphore-pro"
alias mad="g co staging && g merge development && g ps && g ps stg staging:master && g co master && g merge staging && g ps && g ps pro && g co development"
alias deppro="g ps pro && be heroku rake db:migrate --app semaphore-pro && be heroku restart --app semaphore-pro"
alias depstg="g ps stg staging:master && be heroku rake db:migrate --app semaphore-stg && be heroku restart --app semaphore-stg"
alias madb="g co staging && g merge development && be cap staging deploy && g co master && g merge staging && be cap production deploy"
alias ta="tmux attach"
