shell -${SHELL}

# GNU Screen scrolling
termcapinfo xterm* ti@:te@

caption always '%{= kw} %{w}%D %{w} . %= %{= kw}%?%-Lw%?%{r}(%{r}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{w} . %{w} %d/%m %{w}%c %{w}'

defscrollback 2048
startup_message off
hardstatus on
hardstatus alwayslastline
vbell off

screen -t Vim
screen -t Zsh
screen -t Console
screen -t Server
